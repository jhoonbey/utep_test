@model  Country

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title>
                <h2><i class="glyphicon glyphicon-plus"></i> New Country</h2>
            </div>
            <div class="box-content">
                @using (Html.BeginForm("Create", "Countries", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                    <fieldset>
                        <div class="form-group col-md-4">
                            <label class="control-label" for="Name">Name</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })

                            <br>

                            <button type="submit" class="btn btn-primary">Save</button>
                            <a class="btn btn-danger" href="@Url.Action("List", "Countries")">Cancel</a>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
