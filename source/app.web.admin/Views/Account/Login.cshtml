<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="IE=EmulateIE9">
    <meta http-equiv="x-ua-compatible" content="IE=EmulateIE8">
    <meta http-equiv="X-UA-Compatible" content="IE=8" />
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="Utep.az" />
    <meta name="author" content="Jeyhun Rahimov ">
    <meta name="description" content="Utep.az">

    <title>Utep.az</title>

    <!-- The fav icon -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/img/favicon.ico")" />

    <!-- The styles -->
    <link href="@Url.Content("~/Content/css/bootstrap-cerulean.min.css")" id="bs-css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/charisma-app.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bower_components/fullcalendar/dist/fullcalendar.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bower_components/fullcalendar/dist/fullcalendar.print.css")" rel="stylesheet" media="print" />
    <link href="@Url.Content("~/Content/bower_components/chosen/chosen.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bower_components/colorbox/example3/colorbox.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bower_components/responsive-tables/responsive-tables.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bower_components/bootstrap-tour/build/css/bootstrap-tour.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/jquery.noty.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/noty_theme_default.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/elfinder.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/elfinder.theme.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/jquery.iphone.toggle.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/uploadify.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/animate.min.css")" rel="stylesheet" />

    <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
    <div class="ch-container">
        <div class="row">

            <div class="row">
                <div class="col-md-12 center login-header">
                    <h2>Welcome to Utep.az</h2>
                </div>
                <!--/span-->
            </div><!--/row-->
            <div class="row">
                <div class="well col-md-5 center login-box">
                    @*<div class="alert alert-info">
                        Please login with your Username and Password.
                    </div>*@

                    @Html.Partial("~/Views/Shared/_ErrorPartial.cshtml")

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {
                        <fieldset>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user red"></i></span>
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username" })
                            </div>
                            <div class="clearfix"></div><br>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                            </div>
                            <div class="clearfix"></div>
                            @*<div class="input-prepend">
                                <label class="remember" for="remember"><input type="checkbox" id="remember"> Remember me</label>
                            </div>*@
                            <div class="clearfix"></div>
                            <p class="center col-md-5">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </p>
                        </fieldset>
                    }
                </div>
                
            </div>
        </div>
    </div>

    <!-- library for cookie management -->
    <script src="@Url.Content("~/Content/js/jquery.cookie.js")"></script>
    <!-- calender plugin -->
    <script src="@Url.Content("~/Content/bower_components/moment/min/moment.min.js")"></script>
    <script src="@Url.Content("~/Content/bower_components/fullcalendar/dist/fullcalendar.min.js")"></script>
    <!-- data table plugin -->
    <script src="@Url.Content("~/Content/js/jquery.dataTables.min.js")"></script>
    <!-- select or dropdown enhancer -->
    <script src="@Url.Content("~/Content/bower_components/chosen/chosen.jquery.min.js")"></script>
    <!-- plugin for gallery image view -->
    <script src="@Url.Content("~/Content/bower_components/colorbox/jquery.colorbox-min.js")"></script>
    <!-- notification plugin -->
    <script src="@Url.Content("~/Content/js/jquery.noty.js")"></script>
    <!-- library for making tables responsive -->
    <script src="@Url.Content("~/Content/bower_components/responsive-tables/responsive-tables.js")"></script>
    <!-- tour plugin -->
    <script src="@Url.Content("~/Content/bower_components/bootstrap-tour/build/js/bootstrap-tour.min.js")"></script>
    <!-- star rating plugin -->
    <script src="@Url.Content("~/Content/js/jquery.raty.min.js")"></script>
    <!-- for iOS style toggle switch -->
    <script src="@Url.Content("~/Content/js/jquery.iphone.toggle.js")"></script>
    <!-- autogrowing textarea plugin -->
    <script src="@Url.Content("~/Content/js/jquery.autogrow-textarea.js")"></script>
    <!-- multiple file upload plugin -->
    <script src="@Url.Content("~/Content/js/jquery.uploadify-3.1.min.js")"></script>
    <!-- history.js for cross-browser state change on ajax -->
    <script src="@Url.Content("~/Content/js/jquery.history.js")"></script>
    <!-- application script for Charisma demo -->
    <script src="@Url.Content("~/Content/js/charisma.js")"></script>

    <!-- jQuery -->
    <script src="@Url.Content("~/Content/bower_components/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/Content/bower_components/bootstrap/dist/js/bootstrap.min.js")"></script>

</body>
</html>

