@model  User

<div class="row">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="glyphicon glyphicon-plus"></i>New User</h2>
        </div>
        <div class="box-content">
            @using (Html.BeginForm("Create", "Account", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                <fieldset>
                    <div class="form-group col-md-4">
                        <label class="control-label" for="Role">Role</label>
                        <br>
                        @Html.DropDownListFor(model => model.Role, ViewBag.Roles as IEnumerable<SelectListItem>, "-", new { data_rel = "chosen", @id = "Role", @style = "min-width: 200px;" })

                        <br>

                        <label class="control-label" for="Username">Username</label>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })

                        <br>

                        <label class="control-label" for="Password">Password</label>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })

                        <br>

                        <label class="control-label" for="Fullname">Fullname</label>
                        @Html.TextBoxFor(model => model.Fullname, new { @class = "form-control" })

                        <br>
                     
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-danger" href="@Url.Action("List", "Account")">Cancel</a>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
<script>
    jQuery(document).ready(function () {
        $("#Role").chosen();
    });
</script>
