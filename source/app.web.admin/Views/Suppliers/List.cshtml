@model SupplierEntityCollection


<div class="row">
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <a href="@Url.Action("Create", "Suppliers", new { area = "" })" class="btn btn-small btn-success btn-round"
                   style="float: right; margin-right: 10px; margin-top: -3px; padding-top: 6px; ">Add new</a>

                <h2><i class="icon icon-red icon-tag"></i>Suppliers</h2>
                <p style="float: right; margin: 5px 20px 0px 0px;">Count - <a>@Model.AllCount</a> </p>
            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            @*public string FirstName { get; set; }
                                public string LastName { get; set; }
                                public string WhatsappNumber { get; set; }
                                public string ContactNumber { get; set; }
                                public string PlateNumber { get; set; }
                                public string PlateNumber2 { get; set; }
                                public string TransportPassport { get; set; }
                                public string InternationalPassport { get; set; }
                                public string DrivingLicense { get; set; }
                                public string Year { get; set; }
                                public string Condition { get; set; }
                                public string TruckFrontPhotoName { get; set; }
                                public string TruckPhoto1Name { get; set; }
                                public string TruckPhoto2Name { get; set; }
                                public string TruckPhoto3Name { get; set; }
                                public int TransportTypeId { get; set; }
                                public int CompanyId { get; set; }*@


                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>WhatsappNumber</th>
                            <th>ContactNumber</th>
                            @*<th>CompanyId</th>*@
                            <th style="width: 100px; text-align: center;">Create date</th>
                            <th style="width: 20%; text-align: center;">Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Suppliers)
                        {
                            <tr>
                                <td style="vertical-align: middle;">
                                    <a href="@Url.Action("Details", "Suppliers", new { Id = item.Id })">@item.FirstName</a>
                                </td>
                                <td style="vertical-align: middle;">
                                    <a href="@Url.Action("Details", "Suppliers", new { Id = item.Id })">@item.LastName</a>
                                </td>
                                <td style="vertical-align: middle;">
                                    <a href="@Url.Action("Details", "Suppliers", new { Id = item.Id })">@item.WhatsappNumber</a>
                                </td>
                                <td style="vertical-align: middle;">
                                    <a href="@Url.Action("Details", "Suppliers", new { Id = item.Id })">@item.ContactNumber</a>
                                </td>
                                @*<td style="vertical-align: middle;">
                                        @item.Phone
                                    </td>*@
                                @*   <td style="vertical-align: middle;">
                                                                    @if (!string.IsNullOrEmpty(item.ImageName))
                                        {
                                            <a href="@Url.Action("View", "Suppliers", new { id = item.Id, area = "Addmein" })">
                                                <img src="@Url.Content(fileRoot + "_Files/Images/Supplier/256/" + item.ImageName)" alt="" height="150" />
                                            </a>
                                        }
                                    </td>*@
                                <td style="width: 100px; text-align: center; vertical-align: middle;">
                                    <a href="@Url.Action("Details", "Suppliers", new { Id = item.Id })">
                                        @item.CreateDate.ToString("yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture)
                                    </a>
                                </td>
                                <td class="center" style="width: 20%; text-align: center; vertical-align: middle;">
                                    <a class="btn btn-info btn-xs" href="@Url.Action("Edit", "Suppliers", new { id = item.Id })">
                                        <i class=""></i>
                                        Edit
                                    </a>
                                    <a class="btn btn-danger btn-xs" onclick="confirmDelete(@item.Id)" style="">
                                        <i class="icon-trash icon-white"></i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <ul class="pagination pagination-centered">
                    @{
                        var pageModel = new PagingModel
                        {
                            Action = "List",
                            Area = "",
                            Controller = "Suppliers",
                            NumberOfPages = (int)ViewBag.NumberOfPages,
                            CurrentPage = (int)ViewBag.PageNumber
                        };
                    }

                    @Html.Partial("~/Views/Shared/_PagingViewPartial.cshtml", pageModel)
                </ul>
            </div>
        </div>
    </div>
</div>
<script>
    function confirmDelete(id) {
        if (confirm("Are you sure to delete this Supplier ?")) {
            document.location.href = '@Url.Action("Delete", "Suppliers", new { area = "" })/' + id;
        }
    }
</script>




